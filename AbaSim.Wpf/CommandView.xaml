<UserControl x:Class="AbaSim.Wpf.Widgets.CommandView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AbaSim.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{d:DesignData Type=connection:Command}">
    <Grid>
        <ListView x:Name="CommandViewList" ItemsSource="{Binding}" Margin="-10,0,10,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn x:Name="LineColumn" Header="Line" DisplayMemberBinding="{Binding Line}"/>
                    <GridViewColumn x:Name="CommandColumn"  Header="Command" DisplayMemberBinding="{Binding CommandString}" />
                    <GridViewColumn x:Name="FistOCoullumn" Header="First Occurance" DisplayMemberBinding="{Binding ProgramCounter}" />
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</UserControl>
